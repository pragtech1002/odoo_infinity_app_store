<?xml version="1.0"?>
<odoo>
    <record id="model_category_github" model="ir.module.category">
        <field name="name">GitHub</field>
        <field name="description">GitHub users</field>
        <field name="sequence">1</field>
    </record>

    <record id="group_github_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="model_category_github"/>
    </record>

    <record id="group_github_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="model_category_github"/>
        <field name="implied_ids" eval="[(4, ref('group_github_user'))]"/>
    </record>

    <!-- Security Rules -->
    <record id="github_account_user_rule" model="ir.rule">
        <field name="name">GitHub Account User Rule</field>
        <field name="model_id" ref="model_github_repository"/>
        <field name="groups" eval="[(4, ref('group_github_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="github_account_admin_rule" model="ir.rule">
        <field name="name">GitHub Account Admin Rule</field>
        <field name="model_id" ref="model_github_repository"/>
        <field name="groups" eval="[(4, ref('group_github_admin'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>
